#!/bin/sh
#
# Helper script for faint. Allows misc operations on files
#
# Dependencies: fzf & faint-config

. faint-config

FILE_LIST_PATH=/tmp/FAINT_FILE_LIST

read -r LAST_DIR < "$LAST_PATH"
[ -f "$FILE_LIST_PATH" ] && read -r FILE_LIST < "$FILE_LIST_PATH"

FILE_ARGS=$(
   read -r LAST_DIR < "$LAST_PATH"
   for file in "$@"; do
      echo "$LAST_DIR/${file#* }"
   done
)

export FZF_DEFAULT_OPTS="\
   $FZF_DEFAULT_OPTS
   --bind=tab:down,btab:up
   --bind \"$KEY_LAUNCH:accept\"
   "

get_config() {
   CURRENT_IFS=$IFS
   IFS=$(printf ';')
   for line in $OPS; do
      case $1 in
         -o) printf "%s" "${line%%:*}" ;;
         -c)
            case $line in
               *"$2"*) TEMP=${line%;*} && echo "${TEMP#*:}" && break ;;
            esac
            ;;
      esac
   done
   IFS=$CURRENT_IFS
}

main() {
   CHOICE=$(get_config -o | fzf) &&
      CMD=$(get_config -c "${CHOICE#* }") &&
      $CMD 2> /dev/null
}
main
