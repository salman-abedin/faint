#!/bin/sh
#
# Helper script for faint; lists file and formats the view
#
# Dependencie: find, awk, sed & faint-config

. faint-config

#---------------------------------------
#              Icons
#---------------------------------------
format() {
   while read -r file; do
      [ "$file" = . ] && continue
      if [ -d "$file" ]; then
         #---------------------------------------
         #              Folder Icon
         #---------------------------------------
         PREFIX="ðŸ“"
      else
         EXT=${file##*.}
         #---------------------------------------
         #              File Icons
         #---------------------------------------
         case $EXT in
            iso | img) PREFIX="ðŸ“€" ;;
            png | ico) PREFIX="ðŸ–¼" ;;
            jpg | jpeg) PREFIX="ðŸ“¸" ;;
            part) PREFIX="ðŸ’”" ;;
            json) PREFIX="ðŸ“’" ;;
            md) PREFIX="ðŸ“˜" ;;
            tex) PREFIX="ðŸ“œ" ;;
            css | sass | scss) PREFIX="ðŸŽ¨" ;;
            html | pug) PREFIX="ðŸŒŽ" ;;
            pdf | epub) PREFIX="ðŸ“š" ;;
            mp4 | mkv) PREFIX="ðŸŽ¥" ;;
            *) PREFIX="ðŸ“ƒ" ;;
         esac
      fi
      echo "$PREFIX ${file#./}"
   done
}

list() {
   echo "$PWD" > "$LAST_PATH"
   read -r DEPTH < "$DEPTH_PATH"
   read -r FILTERS < "$FILTERS_PATH"
   find . -maxdepth "$DEPTH" \
      ! -regex ".*\($FILTERS\).*" \
      2> /dev/null
}

process_args() {
   read -r LAST_DIR < "$LAST_PATH"
   while :; do
      case $1 in
         -b)
            cd "${LAST_DIR%/*}" || exit 1
            ;;
         -e) shift && cd "$1" || exit 1 ;;
         -l)
            shift
            NEW_DIR=${1#* }
            DEST=$LAST_DIR/$NEW_DIR
            if ! cd "$DEST"; then
               faint-launch "$DEST" || launch -f "$DEST"
               cd "$LAST_DIR" || exit 1
            fi
            ;;
         *) break ;;
      esac
      shift
   done
}

main() {
   process_args "$@"
   list | format
}
main "$@"
