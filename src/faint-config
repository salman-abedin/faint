#!/bin/sh
#
# Config file for faint
# Dependencies: pkill

#===============================================================================
#                             Default Settings
#===============================================================================

SHOW_HIDDEN=1
USE_FILTERS=1
MAX_DEPTH=1

#===============================================================================
# Bindings ( ‚Åâ has to be a single character!) [ More on fzf man page ]
#===============================================================================

KEY_LAUNCH=';'
KEY_BACK=','
KEY_OPERATE='space'
KEY_QUIT='esc'

KEY_SHELL='enter'
KEY_EDIT=":"

KEY_UP='btab'
KEY_DOWN='tab'

KEY_MARK_DOWN=']'
KEY_MARK_UP='['
KEY_MARK_ALL='\\'

KEY_REFRESH="."

KEY_BOOKMARK_BROWSE="'"
KEY_BOOKMARK_ADD='\"'

KEY_TOGGLE_HIDDEN="="
KEY_TOGGLE_FILTERS='-'

#===============================================================================
#                             Filters
#===============================================================================

#---------------------------------------
# <FILE>/<FOLDER;
#---------------------------------------
FILTERS="\
node_modules;
package-lock.json;
yarn.lock;
.git;
"

#===============================================================================
#                             Operations
#===============================================================================

# Variable Conventions
#     FILE_ARGS      = Files selected for operation ( ‚Åâ Has to be unquoted )
#     FILE_LIST      = Files tracked for consecutive operations
#     FILE_LIST_PATH = PATH for tracking files
#     LAST_DIR       = Current path

#---------------------------------------
# Operation Functions
#---------------------------------------
delete() { rm -fr $FILE_ARGS; }
trash() { mv $FILE_ARGS "$TRASH"; }
yank() { echo $FILE_ARGS | xsel -b && echo $FILE_ARGS > "$FILE_LIST_PATH"; }
paste() { cp -br $FILE_LIST "$LAST_DIR"; }
move() { mv $FILE_LIST "$LAST_DIR"; }
link_soft() { cp -frs $FILE_LIST "$LAST_DIR"; }
link_hard() { cp -frl $FILE_LIST "$LAST_DIR"; }
tmux_pane() {
   tmux split-window -h "$EDITOR $FILE_ARGS" \; \
      swap-pane -d -t :.1 \; \
      select-layout main-vertical
}

#---------------------------------------
# <OPERATION_NAME>:<OPERATION_FUNCTION>;
#---------------------------------------
OPS="\
üíª Tmux:tmux_pane;
‚öî Trash:trash;
‚ùå Delete:delete;
¬© Yank:yank;
üñå Paste:paste;
üöö Move:move;
üóû Soft Link:link_soft;
üå¥ Hard Link:link_hard;
"

#===============================================================================
#                             Launching
#===============================================================================

#---------------------------------------
# Launch Functions
#---------------------------------------

# Use "$1" for referencing the file
edit() {
   echo "$1" > "$EDITOR_FILE_PATH"
   kill -36 "$FAINT_PID"
   pkill -P "$FAINT_PID"
}

#-------------------------------------------------------
# <EXT_1|EXT_2>:<Launch_CMD/Launch_FUNCTION>;
#-------------------------------------------------------
LAUNCH_CMDS="\
zip:ns;
mp4|mkv:mpv;
default:edit;
"
#===============================================================================
#                               Icons
#===============================================================================

#---------------------------------------
# <EXT_1|EXT_2|...>:<ICON>;
#---------------------------------------
ICONS="\
dir:üìÅ;
file:üìÉ;
link:‚õì;
iso|img:üìÄ;
png|ico:üñº;
jpg|jpeg:üì∏;
part:üíî;
json:üìí;
md:üìò;
tex:üìú;
css|sass|scss:üé®;
html|pug:üåé;
pdf|epub:üìö;
mp4|mkv:üé•;
"
